{% extends 'dash/index.html.twig' %}

{% block wrapper %}
    <div class="row">
        <div class="col-lg-12">
            <p></p>
            <br>
            {#                <h1 class="page-header">Solicitudes </h1>#}
        </div>
    </div>

    <div class="col-lg-8">


    <ol class="breadcrumb">
        <li><a href="{{ path('dashboard') }}">Inicio</a></li>
        <li class="active">Plan de trabajo</li>
    </ol>

        {{ form_start(form) }}
        <!-- Nav tabs -->
        <ul class="nav nav-tabs" role="tablist">
            <li role="presentation" class="active"><a href="#investigacion" aria-controls="investigacion" role="tab" data-toggle="tab">Investigación</a></li>
            <li role="presentation"><a href="#estudiantes" aria-controls="estudiantes" role="tab" data-toggle="tab">Estudiantes</a></li>
            <li role="presentation"><a href="#cursos" aria-controls="cursos" role="tab" data-toggle="tab">Cursos</a></li>
            <li role="presentation"><a href="#proyectos" aria-controls="proyectos" role="tab" data-toggle="tab">Proyectos</a></li>
            <li role="presentation"><a href="#eventos" aria-controls="eventos" role="tab" data-toggle="tab">Eventos</a></li>
            <li role="presentation"><a href="#salidas" aria-controls="salidas" role="tab" data-toggle="tab">Licencias y comisiones</a></li>
        </ul>

        <!-- Tab panes -->
        <div class="tab-content">
            <div role="tabpanel" class="tab-pane active" id="investigacion">
                <div class="form-group">
                    <div>
                        <br>
                        <p>Actividades de investigación</p>
                    </div>
                    <div>
                        {{ form_widget(form.investigacion,{'attr': {'class': 'form-control input-sm', 'placeholder':'Investigación', 'rows':'20' } } )   }}
                    </div>
                    <div>{{ form_errors(form.investigacion) }}</div>
                </div>
            </div>
            <div role="tabpanel" class="tab-pane" id="estudiantes">
                <div class="form-group">
                    <div>
                        <br>
                        <p>Estudiantes</p>
                    </div>
                    <div>
                        {{ form_widget(form.estudiantes,{'attr': {'class': 'form-control input-sm', 'placeholder':'Estudiantes', 'rows':'20' } } )  }}
                    </div>
                    <div>{{ form_errors(form.estudiantes) }}</div>
                </div>
            </div>
            <div role="tabpanel" class="tab-pane" id="cursos">
                <div class="form-group">
                    <div>
                        <br>
                        <p>Cursos o seminarios a impartir</p>
                    </div>
                    <div>
                        {{ form_widget(form.cursos,{'attr': {'class': 'form-control input-sm', 'placeholder':'Cursos', 'rows':'20'} } ) }}
                    </div>
                    <div>{{ form_errors(form.cursos) }}</div>
                </div>
            </div>
            <div role="tabpanel" class="tab-pane" id="proyectos">
                <div class="form-group">
                    <div>
                        <br>
                        <p>Proyectos de investigación</p>
                    </div>
                    <div>
                        {{ form_widget(form.proyectos,{'attr': {'class': 'form-control input-sm', 'placeholder':'Proyectos de investigación','rows':'20'} } ) }}
                    </div>
                    <div>{{ form_errors(form.proyectos) }}</div>
                </div>
            </div>
            <div role="tabpanel" class="tab-pane" id="eventos">
                <div class="form-group">
                    <div>
                        <br>
                        <p>Eventos</p>
                    </div>
                    <div>
                        {{ form_widget(form.eventos,{'attr': {'class': 'form-control input-sm', 'placeholder':'Eventos', 'rows':'20'} } ) }}
                    </div>
                    <div>{{ form_errors(form.eventos) }}</div>
                </div>
            </div>
            <div role="tabpanel" class="tab-pane" id="salidas">
                <div class="form-group">
                    <div>
                        <br>
                        <p>Licencias y comisiones</p>
                    </div>
                    <div>
                        {{ form_widget(form.salidas,{'attr': {'class': 'form-control input-sm', 'placeholder':'Licencias y comisiones','rows':'20'} } ) }}
                    </div>
                    <div>{{ form_errors(form.salidas) }}</div>
                </div>
            </div>
        </div>

    </div>

    <div class="row">
        <div class="col-lg-8 col-lg-offset-4">
            <input type="submit" value="Guardar"  class="btn btn-primary"/>
            {{ form_end(form) }}
        </div>
    </div>

{% endblock %}
