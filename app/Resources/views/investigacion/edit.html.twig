{% form_theme edit_form 'form_errors.html.twig' %}

{{ form_start(edit_form, {'action': path('investigacion_edit', { 'id': id})}) }}

<div class="panel panel-default">
    <div class="panel-body">
        <div class="row">
            <div class="col-lg-12">
                <div class="col-lg-12">
                    <div class="form-group">
                        <div>
                            {{ form_label(edit_form.titulo) }}
                        </div>
                        <div>
                            {{ form_widget(edit_form.titulo,{'attr': {'class': 'form-control input-sm', 'placeholder':'Título'} } ) }}
                        </div>
                        <div>{{ form_errors(edit_form.titulo) }}</div>
                    </div>
                </div>
                <div class="col-lg-12">
                    <div class="form-group">
                        <div>
                            {{ form_label(edit_form.autores) }}
                        </div>
                        <div>
                            {{ form_widget(edit_form.autores,{'attr': {'class': 'form-control input-sm', 'placeholder':'Autores'} } ) }}
                        </div>
                        <div>{{ form_errors(edit_form.autores) }}</div>
                    </div>
                </div>
                <div class="col-lg-3">
                    <div class="form-group">
                        <div>
                            {{ form_label(edit_form.tipo) }}
                        </div>
                        <div>
                            {{ form_widget(edit_form.tipo,{'attr': {'class': 'form-control input-sm', 'placeholder':'Tipo de publicación'} } ) }}
                        </div>
                        <div>{{ form_errors(edit_form.tipo) }}</div>
                    </div>
                </div>
                <div class="col-lg-3">
                    <div class="form-group">
                        <div>
                            {{ form_label(edit_form.year) }}
                        </div>
                        <div>
                            {{ form_widget(edit_form.year,{'attr': {'class': 'form-control input-sm', 'placeholder':'Año'} } ) }}
                        </div>
                        <div>{{ form_errors(edit_form.year) }}</div>
                    </div>
                </div>
                <div class="col-lg-3">
                    <div class="form-group">
                        <div>
                            {{ form_label(edit_form.pags) }}
                        </div>
                        <div>
                            {{ form_widget(edit_form.pags,{'attr': {'class': 'form-control input-sm', 'placeholder':'Páginas'} } ) }}
                        </div>
                        <div>{{ form_errors(edit_form.pags) }}</div>
                    </div>
                </div>
                <div class="col-lg-3">
                    <div class="form-group">
                        <div>
                            {{ form_label(edit_form.volumen) }}
                        </div>
                        <div>
                            {{ form_widget(edit_form.volumen,{'attr': {'class': 'form-control input-sm', 'placeholder':'Volumen'} } ) }}
                        </div>
                        <div>{{ form_errors(edit_form.volumen) }}</div>
                    </div>
                </div>
                <div class="col-lg-3">
                    <div class="form-group">
                        <div>
                            {{ form_label(edit_form.numero) }}
                        </div>
                        <div>
                            {{ form_widget(edit_form.numero,{'attr': {'class': 'form-control input-sm', 'placeholder':'Número'} } ) }}
                        </div>
                        <div>{{ form_errors(edit_form.numero) }}</div>
                    </div>
                </div>
                <div class="col-lg-3">
                    <div class="form-group">
                        <div>
                            {{ form_label(edit_form.status) }}
                        </div>
                        <div>
                            {{ form_widget(edit_form.status,{'attr': {'class': 'form-control input-sm', 'placeholder':'Status'} } ) }}
                        </div>
                        <div>{{ form_errors(edit_form.status) }}</div>
                    </div>
                </div>
                <div class="col-lg-3">
                    <div class="form-group">
                        <div>{{ form_label(edit_form.indizado) }}</div>
                        <div>
                            {% spaceless %}
                                {% for child in edit_form.indizado %}
                                    <div class="radio-inline">
                                        {{ form_widget(child) }}  {{ form_label(child, null, {'label_attr': {'class': 'btn btn-default btn-xs'}}) }}
                                    </div>
                                {% endfor %}
                            {% endspaceless %}
                        </div>
                        <div>{{ form_errors(edit_form.indizado) }}</div>
                    </div>
                </div>
                <div class="col-lg-12">
                    <div class="form-group">
                        <div>
                            {{ form_label(edit_form.revista) }}
                        </div>
                        <div>
                            {{ form_widget(edit_form.revista,{'attr': {'class': 'form-control input-sm', 'placeholder':'Revista'} } ) }}
                        </div>
                        <div>{{ form_errors(edit_form.revista) }}</div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="form-group">
                        <div>
                            {{ form_label(edit_form.issn) }}
                        </div>
                        <div>
                            {{ form_widget(edit_form.issn,{'attr': {'class': 'form-control input-sm', 'placeholder':'ISSN'} } ) }}
                        </div>
                        <div>{{ form_errors(edit_form.issn) }}</div>
                    </div>
                </div>
                <div class="col-lg-12">
                    <div class="form-group">
                        <div>
                            {{ form_label(edit_form.proyectos) }}
                        </div>
                        <div>
                            {{ form_widget(edit_form.proyectos,{'attr': {'class': 'form-control input-sm', 'placeholder':'Proyectos'} } ) }}
                        </div>
                        <div>{{ form_errors(edit_form.proyectos) }}</div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-7 col-lg-offset-5">
        <input type="submit" value="Guardar"  class="btn btn-primary"/>
        <button type="button" class="btn btn-warning" data-dismiss="modal">Cancelar</button>
        {{ form_end(edit_form) }}
    </div>
</div>


