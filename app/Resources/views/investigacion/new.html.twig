{% extends 'base.html.twig' %}

{% form_theme form 'form_errors.html.twig' %}

{% block wrapper %}
    <div class="row">

        <div class="col-lg-12">
            <p></p>
            {#                <h1 class="page-header">Solicitudes </h1>#}
        </div>
    </div>
    <div class="page-header">
        <h1>Investigación</h1>
    </div>

    {{ form_start(form) }}

    <div class="panel panel-default">
        <div class="panel-body">
            <div class="row">
                <div class="col-lg-12">
                    <div class="col-lg-6">
                        <div class="form-group">
                            <div>
                                {{ form_label(form.titulo) }}
                            </div>
                            <div>
                                {{ form_widget(form.titulo,{'attr': {'class': 'form-control input-sm', 'placeholder':'Título'} } ) }}
                            </div>
                            <div>{{ form_errors(form.titulo) }}</div>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="form-group">
                            <div>
                                {{ form_label(form.autores) }}
                            </div>
                            <div>
                                {{ form_widget(form.autores,{'attr': {'class': 'form-control input-sm', 'placeholder':'Autores'} } ) }}
                            </div>
                            <div>{{ form_errors(form.autores) }}</div>
                        </div>
                    </div>
                    <div class="col-lg-2">
                        <div class="form-group">
                            <div>
                                {{ form_label(form.tipo) }}
                            </div>
                            <div>
                                {{ form_widget(form.tipo,{'attr': {'class': 'form-control input-sm', 'placeholder':'Tipo de publicación'} } ) }}
                            </div>
                            <div>{{ form_errors(form.tipo) }}</div>
                        </div>
                    </div>
                    <div class="col-lg-2">
                        <div class="form-group">
                            <div>
                                {{ form_label(form.year) }}
                            </div>
                            <div>
                                {{ form_widget(form.year,{'attr': {'class': 'form-control input-sm', 'placeholder':'Año'} } ) }}
                            </div>
                            <div>{{ form_errors(form.year) }}</div>
                        </div>
                    </div>
                    <div class="col-lg-1">
                        <div class="form-group">
                            <div>
                                {{ form_label(form.pags) }}
                            </div>
                            <div>
                                {{ form_widget(form.pags,{'attr': {'class': 'form-control input-sm', 'placeholder':'Páginas'} } ) }}
                            </div>
                            <div>{{ form_errors(form.pags) }}</div>
                        </div>
                    </div>
                    <div class="col-lg-1">
                        <div class="form-group">
                            <div>
                                {{ form_label(form.volumen) }}
                            </div>
                            <div>
                                {{ form_widget(form.volumen,{'attr': {'class': 'form-control input-sm', 'placeholder':'Volumen'} } ) }}
                            </div>
                            <div>{{ form_errors(form.volumen) }}</div>
                        </div>
                    </div>
                    <div class="col-lg-1">
                        <div class="form-group">
                            <div>
                                {{ form_label(form.numero) }}
                            </div>
                            <div>
                                {{ form_widget(form.numero,{'attr': {'class': 'form-control input-sm', 'placeholder':'Número'} } ) }}
                            </div>
                            <div>{{ form_errors(form.numero) }}</div>
                        </div>
                    </div>
                    <div class="col-lg-2">
                        <div class="form-group">
                            <div>
                                {{ form_label(form.status) }}
                            </div>
                            <div>
                                {{ form_widget(form.status,{'attr': {'class': 'form-control input-sm', 'placeholder':'Status'} } ) }}
                            </div>
                            <div>{{ form_errors(form.status) }}</div>
                        </div>
                    </div>
                    <div class="col-lg-2">
                        <div class="form-group">
                            <div>{{ form_label(form.indizado) }}</div>
                            <div>
                                {% spaceless %}
                                    {% for child in form.indizado %}
                                        <div class="radio-inline">
                                            {{ form_widget(child) }}  {{ form_label(child, null, {'label_attr': {'class': 'btn btn-default btn-xs'}}) }}
                                        </div>
                                    {% endfor %}
                                {% endspaceless %}
                            </div>
                            <div>{{ form_errors(form.indizado) }}</div>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="form-group">
                            <div>
                                {{ form_label(form.revista) }}
                            </div>
                            <div>
                                {{ form_widget(form.revista,{'attr': {'class': 'form-control input-sm', 'placeholder':'Revista'} } ) }}
                            </div>
                            <div>{{ form_errors(form.revista) }}</div>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="form-group">
                            <div>
                                {{ form_label(form.issn) }}
                            </div>
                            <div>
                                {{ form_widget(form.issn,{'attr': {'class': 'form-control input-sm', 'placeholder':'ISSN'} } ) }}
                            </div>
                            <div>{{ form_errors(form.issn) }}</div>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="form-group">
                            <div>
                                {{ form_label(form.proyectos) }}
                            </div>
                            <div>
                                {{ form_widget(form.proyectos,{'attr': {'class': 'form-control input-sm', 'placeholder':'Proyectos'} } ) }}
                            </div>
                            <div>{{ form_errors(form.proyectos) }}</div>
                        </div>
                    </div>


                    <div class="col-lg-2">
                        <div class="form-group">
                            <div>
                   {#              {{ form_label(form.academico) }} #}
                            </div>
                            <div>
                                {#            {{ form_widget(form.academico, {'attr': {'class': 'form-control input-sm'} } ) }} #}
                            </div>
                            {#   <div>{{ form_errors(form.academico) }}</div>  #}
                        </div>
                    </div>


                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-7 col-lg-offset-5">
            <input type="submit" value="Guardar"  class="btn btn-primary"/>
            <a class="btn btn-warning" href="{{ path('dashboard') }}">Cancelar</a>

            {{ form_end(form) }}


        </div>
    </div>



{% endblock %}
