{% extends 'base.html.twig' %}

{% block wrapper %}
    <div class="row">

        <div class="col-lg-12">
            <p></p>
            {#                <h1 class="page-header">Solicitudes </h1>#}
        </div>
    </div>
    <div class="page-header">
        <h1>Proyectos</h1>
    </div>

    {{ form_start(form) }}

    <div class="panel panel-default">
        <div class="panel-body">
            <div class="row">

                <div class="col-lg-2">
                    <div class="form-group">
                        <div>
                            {{ form_label(form.tipo) }}
                        </div>
                        <div>
                            {{ form_widget(form.tipo,{'attr': {'class': 'form-control input-sm', 'placeholder':'tipo'} } ) }}
                        </div>
                        <div>{{ form_errors(form.tipo) }}</div>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="form-group">
                        <div>
                            {{ form_label(form.nombre) }}
                        </div>
                        <div>
                            {{ form_widget(form.nombre,{'attr': {'class': 'form-control input-sm', 'placeholder':'Nombre del proyecto'} } ) }}
                        </div>
                        <div>{{ form_errors(form.nombre) }}</div>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="form-group">
                        <div>
                            {{ form_label(form.numero) }}
                        </div>
                        <div>
                            {{ form_widget(form.numero,{'attr': {'class': 'form-control input-sm', 'placeholder':'NÃºmero de proyecto'} } ) }}
                        </div>
                        <div>{{ form_errors(form.numero) }}</div>
                    </div>
                </div>

            </div>
        </div>
    </div>


    <div class="row">
        <div class="col-lg-7 col-lg-offset-5">
            <input type="submit" value="Guardar"  class="btn btn-primary"/>
            <a class="btn btn-warning" href="{{ path('dashboard') }}">Cancelar</a>

            {{ form_end(form) }}


        </div>
    </div>




{% endblock %}
