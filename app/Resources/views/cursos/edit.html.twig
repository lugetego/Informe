{% form_theme edit_form 'form_errors.html.twig' %}

{{ form_start(edit_form, {'action': path('cursos_edit', { 'id': id})}) }}

<div class="panel panel-default">
    <div class="panel-body">
        <div class="row">

            <div class="col-lg-12">
                <div class="form-group">
                    <div>
                        {{ form_label(edit_form.nombre) }}
                    </div>
                    <div>
                        {{ form_widget(edit_form.nombre,{'attr': {'class': 'form-control input-sm', 'placeholder':'Nombre del curso o seminario'} } ) }}
                    </div>
                    <div>{{ form_errors(edit_form.nombre) }}</div>
                </div>
            </div>
            <div class="col-lg-3">
                <div class="form-group">
                    <div>
                        {{ form_label(edit_form.tipo) }}
                    </div>
                    <div>
                        {{ form_widget(edit_form.tipo,{'attr': {'class': 'form-control input-sm', 'placeholder':'Curso o seminario'} } ) }}
                    </div>
                    <div>{{ form_errors(edit_form.tipo) }}</div>
                </div>
            </div>

            <div class="col-lg-3">
                <div class="form-group">
                    <div>
                        {{ form_label(edit_form.nivel) }}
                    </div>
                    <div>
                        {{ form_widget(edit_form.nivel,{'attr': {'class': 'form-control input-sm', 'placeholder':'Nivel del curso o seminario'} } ) }}
                    </div>
                    <div>{{ form_errors(edit_form.nivel) }}</div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="form-group">
                    <div>
                        {{ form_label(edit_form.horas) }}
                    </div>
                    <div>
                        {{ form_widget(edit_form.horas,{'attr': {'class': 'form-control input-sm', 'placeholder':'NÃºmero de horas por semana'} } ) }}
                    </div>
                    <div>{{ form_errors(edit_form.horas) }}</div>
                </div>
            </div>


            {%  if edit_form.lugares is defined %}

                <div class="col-lg-6">
                    <div class="form-group">
                        <div>{{ form_label(edit_form.lugares) }}</div>
                        <div>{{ form_widget(edit_form.lugares, {'attr': {'class': 'form-control input-sm', 'placeholder':'Otro lugar'} } ) }}</div>
                        <div>{{ form_errors(edit_form.lugares) }}</div><br>
                    </div>
                </div>


            {% endif %}

            <div class="col-lg-6">
                <div class="form-group">
                    <div>{{ form_label(edit_form.lugar) }}</div>
                    <div>{{ form_widget(edit_form.lugar, {'attr': {'class': 'form-control input-sm', 'placeholder':'Otro lugar'} } ) }}</div>
                    <div>{{ form_errors(edit_form.lugar) }}</div><br>
                </div>
            </div>

        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-7 col-lg-offset-5">
        <input type="submit" value="Guardar"  class="btn btn-primary"/>
        <button type="button" class="btn btn-warning" data-dismiss="modal">Cancelar</button>
        {{ form_end(edit_form) }}
    </div>
</div>
