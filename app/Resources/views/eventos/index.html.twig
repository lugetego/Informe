{% extends 'base.html.twig' %}

{% block body %}
    <h1>Eventos list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Tipo</th>
                <th>Organizador</th>
                <th>Nacional</th>
                <th>Pais</th>
                <th>Institucion</th>
                <th>Platica</th>
                <th>Actividad</th>
                <th>Fecha</th>
                <th>Informacion</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for evento in eventos %}
            <tr>
                <td><a href="{{ path('eventos_show', { 'id': evento.id }) }}">{{ evento.id }}</a></td>
                <td>{{ evento.nombre }}</td>
                <td>{{ evento.tipo }}</td>
                <td>{% if evento.organizador %}Yes{% else %}No{% endif %}</td>
                <td>{% if evento.nacional %}Yes{% else %}No{% endif %}</td>
                <td>{{ evento.pais }}</td>
                <td>{{ evento.institucion }}</td>
                <td>{{ evento.platica }}</td>
                <td>{{ evento.actividad }}</td>
                <td>{% if evento.fecha %}{{ evento.fecha|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ evento.informacion }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('eventos_show', { 'id': evento.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('eventos_edit', { 'id': evento.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('eventos_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
