{% form_theme edit_form 'form_errors.html.twig' %}

{{ form_start(edit_form, {'action': path('eventos_edit', { 'id': id})}) }}

<div class="panel panel-default">
    <div class="panel-body">
        <div class="row">
            <div class="col-lg-6">
                <div class="form-group">
                    <div>
                        {{ form_label(edit_form.nombre) }}
                    </div>
                    <div>
                        {{ form_widget(edit_form.nombre,{'attr': {'class': 'form-control input-sm', 'placeholder':'Título'} } ) }}
                    </div>
                    <div>{{ form_errors(edit_form.nombre) }}</div>
                </div>
            </div>
            <div class="col-lg-2">
                <div class="form-group">
                    <div>
                        {{ form_label(edit_form.tipo) }}
                    </div>
                    <div>
                        {{ form_widget(edit_form.tipo,{'attr': {'class': 'form-control input-sm', 'placeholder':'Título'} } ) }}
                    </div>
                    <div>{{ form_errors(edit_form.tipo) }}</div>
                </div>
            </div>
            <div class="col-lg-2">
                <div class="form-group">
                    <div>{{ form_label(edit_form.organizador) }}</div>
                    <div>
                        {% spaceless %}
                            {% for child in edit_form.organizador %}
                                <div class="radio-inline">
                                    {{ form_widget(child) }}  {{ form_label(child, null, {'label_attr': {'class': 'btn btn-default btn-xs'}}) }}
                                </div>
                            {% endfor %}
                        {% endspaceless %}
                    </div>
                    <div>{{ form_errors(edit_form.organizador) }}</div>
                </div>
            </div>

            <div class="col-lg-2">
                <div class="form-group">
                    <div>{{ form_label(edit_form.nacional) }}</div>
                    <div>
                        {% spaceless %}
                            {% for child in edit_form.nacional %}
                                <div class="radio-inline">
                                    {{ form_widget(child) }}  {{ form_label(child, null, {'label_attr': {'class': 'btn btn-default btn-xs'}}) }}
                                </div>
                            {% endfor %}
                        {% endspaceless %}
                    </div>
                    <div>{{ form_errors(edit_form.nacional) }}</div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="form-group">
                    <div>
                        {{ form_label(edit_form.pais) }}
                    </div>
                    <div>
                        {{ form_widget(edit_form.pais,{'attr': {'class': 'form-control input-sm', 'placeholder':'Título'} } ) }}
                    </div>
                    <div>{{ form_errors(edit_form.pais) }}</div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="form-group">
                    <div>
                        {{ form_label(edit_form.institucion) }}
                    </div>
                    <div>
                        {{ form_widget(edit_form.institucion,{'attr': {'class': 'form-control input-sm', 'placeholder':'Título'} } ) }}
                    </div>
                    <div>{{ form_errors(edit_form.institucion) }}</div>
                </div>
            </div>

            <div class="col-lg-6">
                <div class="form-group">
                    <div>
                        {{ form_label(edit_form.platica) }}
                    </div>
                    <div>
                        {{ form_widget(edit_form.platica,{'attr': {'class': 'form-control input-sm', 'placeholder':'Título'} } ) }}
                    </div>
                    <div>{{ form_errors(edit_form.platica) }}</div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="form-group">
                    <div>
                        {{ form_label(edit_form.actividad) }}
                    </div>
                    <div>
                        {{ form_widget(edit_form.actividad,{'attr': {'class': 'form-control input-sm', 'placeholder':'Título'} } ) }}
                    </div>
                    <div>{{ form_errors(edit_form.actividad) }}</div>
                </div>
            </div>

            <div class="col-lg-6">
                <div class="form-group">
                    <div>{{ form_label(edit_form.inicio) }}</div>
                    <div class="col-lg-4" >{{ form_widget(edit_form.inicio.day, {'attr': {'class': 'form-control input-sm'} } ) }}</div>
                    <div class="col-lg-4" >{{ form_widget(edit_form.inicio.month, {'attr': {'class': 'form-control input-sm'} } ) }}</div>
                    <div class="col-lg-4" >{{ form_widget(edit_form.inicio.year, {'attr': {'class': 'form-control input-sm'} } ) }}</div>
                    <div>{{ form_errors(edit_form.inicio) }}</div>
                </div>
            </div>

            <div class="col-lg-6">
                <div class="form-group">
                    <div>{{ form_label(edit_form.fin) }}</div>
                    <div class="col-lg-4" >{{ form_widget(edit_form.fin.day, {'attr': {'class': 'form-control input-sm'} } ) }}</div>
                    <div class="col-lg-4" >{{ form_widget(edit_form.fin.month, {'attr': {'class': 'form-control input-sm'} } ) }}</div>
                    <div class="col-lg-4" >{{ form_widget(edit_form.fin.year, {'attr': {'class': 'form-control input-sm'} } ) }}</div>
                    <div>{{ form_errors(edit_form.fin) }}</div>
                </div>
            </div>
            <div class="col-md-12" >
                <br>
                <div>{{ form_label(edit_form.informacion) }}</div>
                <div>{{ form_widget(edit_form.informacion, {'attr': {'class': 'form-control input-sm'} } ) }}</div>
                <div>{{ form_errors(edit_form.informacion) }}</div><br>
            </div>

        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-7 col-lg-offset-5">
        <input type="submit" value="Guardar"  class="btn btn-primary"/>
        <button type="button" class="btn btn-warning" data-dismiss="modal">Cancelar</button>
        {{ form_end(edit_form) }}
    </div>
</div>