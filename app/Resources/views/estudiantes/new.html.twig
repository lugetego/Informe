{% extends 'base.html.twig' %}

{% block wrapper %}
    <div class="row">

        <div class="col-lg-12">
            <p></p>
            {#                <h1 class="page-header">Solicitudes </h1>#}
        </div>
    </div>

    <div class="page-header">
        <h1>Estudiantes</h1>
    </div>

    {{ form_start(form) }}

<div class="panel panel-default">
    <div class="panel-body">
        <div class="row">

                <div class="col-lg-6">
                    <div class="form-group">
                        <div>
                            {{ form_label(form.alumno) }}
                        </div>
                        <div>
                            {{ form_widget(form.alumno,{'attr': {'class': 'form-control input-sm', 'placeholder':'Nombre del alumno'} } ) }}
                        </div>
                        <div>{{ form_errors(form.alumno) }}</div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="form-group">
                        <div>
                            {{ form_label(form.programa) }}
                        </div>
                        <div>
                            {{ form_widget(form.programa,{'attr': {'class': 'form-control input-sm', 'placeholder':'Programa'} } ) }}
                        </div>
                        <div>{{ form_errors(form.programa) }}</div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="form-group">
                        <div>
                            {{ form_label(form.tesis) }}
                        </div>
                        <div>
                            {{ form_widget(form.tesis,{'attr': {'class': 'form-control input-sm', 'placeholder':'Tesis'} } ) }}
                        </div>
                        <div>{{ form_errors(form.tesis) }}</div>
                    </div>
                </div>

        </div>
    </div>
</div>

    <div class="row">
        <div class="col-lg-7 col-lg-offset-5">
            <input type="submit" value="Guardar"  class="btn btn-primary"/>
            <a class="btn btn-warning" href="{{ path('dashboard') }}">Cancelar</a>

            {{ form_end(form) }}


        </div>
    </div>
{% endblock %}
