<div class="panel panel-default">
    <div class="panel-body">

        <p><h3>{{ salida.universidad }}</h3></p>
        <p>
            <strong>{{  salida.ciudad }}, {{ salida.pais }}</strong> <i class="fa fa-calendar"></i> del {{ salida.inicio | localizeddate('medium', 'none', null, null, "d LLLL") }} al {{ salida.fin| localizeddate('long', 'none') }}
        </p>
        <div class="well">{{ salida.actividad }}</div>

        {% if salida.trabajo %}
            <p><h4>{{ salida.trabajo }}</h4></p>
        {% endif %}

        {% if salida.observaciones %}
            <p>{{ salida.observaciones }}</p>
        {% endif %}

        {% for proposito in salida.propositos %}
            <span class="label label-default">{{ proposito }}</span>
        {% endfor %}

