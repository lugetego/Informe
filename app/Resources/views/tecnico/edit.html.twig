{% extends 'dash/tecnico.html.twig' %}

{% block wrapper %}
    <div class="row">
        <div class="col-lg-12">
            <p></p>
            <br>
            {#                <h1 class="page-header">Solicitudes </h1>#}
        </div>
    </div>

    <div class="col-lg-8">


        <ol class="breadcrumb">
            <li><a href="{{ path('dashboard') }}">Inicio</a></li>
            <li class="active">Informe de actividades y Plan de trabajo</li>
        </ol>

        {{ form_start(edit_form) }}
        <!-- Nav tabs -->
        <ul class="nav nav-tabs" role="tablist">
            <li role="presentation" class="active"><a href="#informe" aria-controls="informe" role="tab" data-toggle="tab">Informe de actividades</a></li>
            <li role="presentation"><a href="#plan" aria-controls="plan" role="tab" data-toggle="tab">Plan de trabajo</a></li>
        </ul>

        <!-- Tab panes -->
        <div class="tab-content">
            <div role="tabpanel" class="tab-pane active" id="informe">
                <div class="form-group">
                    <div>
                        <br>
                        <p>Informe de actividades correspondiente al año 2016</p>
                    </div>
                    <div>
                        {% if enviado == false  %}
                            {{ form_widget(edit_form.informe,{'attr': {'class': 'form-control input-sm', 'placeholder':'Informe de actividades', 'rows':'20' } } )   }}
                        {% else %}
                            {{ form_widget(edit_form.informe,{'attr': {'class': 'form-control input-sm', 'placeholder':'Informe de actividades', 'rows':'20', 'disabled':true } } ) }}
                        {% endif %}
                    </div>
                    <div>

                    </div>
                    <div>{{ form_errors(edit_form.informe) }}</div>
                </div>
            </div>
            <div role="tabpanel" class="tab-pane" id="plan">
                <div class="form-group">
                    <div>
                        <br>
                        <p>Plan de trabajo correspondiente al año 2017</p>
                    </div>
                    <div>
                        {% if enviado == false  %}
                            {{ form_widget(edit_form.plan,{'attr': {'class': 'form-control input-sm', 'placeholder':'Plan de trabajo', 'rows':'20' } } )  }}
                        {% else %}
                            {{ form_widget(edit_form.plan,{'attr': {'class': 'form-control input-sm', 'placeholder':'Plan de trabajo', 'rows':'20', 'disabled':true } } ) }}
                        {% endif %}

                    </div>
                    <div>{{ form_errors(edit_form.plan) }}</div>
                </div>
            </div>

        </div>

    </div>

    {% if enviado == false  %}
        <div class="row">
            <div class="col-lg-8 col-lg-offset-4">
                <input type="submit" value="Guardar"  class="btn btn-primary"/>
                {{ form_end(edit_form) }}
            </div>
        </div>
    {% endif %}

{% endblock %}
